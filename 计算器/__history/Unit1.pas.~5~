         MessageBeep(MB_OK)
      else
         Edit1.Text:=Edit1.Text+'/';
  end;
end;

procedure TForm1.Button31Click(Sender: TObject);
var
   i:string;
   mun:array[1..40] of Real;
   mun1:array[1..40] of string;
   L,j,a,k:Integer;
begin
edit1.SetFocus;
  a:=1;
  j:=1;
  OK:=1;
  k:=1;
  L:=1;
   for  a:=1 to Length(Edit1.Text) do
   begin
   if (Edit1.Text[a]='+') or (Edit1.Text[a]='-') or
   (Edit1.Text[a]='*') or (Edit1.Text[a]='/') then
   begin
      mun[j]:= StrToFloat(i);
      mun1[L]:= Edit1.Text[a];
      j:=1+j;
      L:=1+L;
      i:='';
   end
   else
      i:=i+ Edit1.Text[a];
   end;
   mun[j]:= StrToFloat(i);
   data:= mun[1];
   for a:=2 to j do
    begin
    data1:= mun[a];
    if mun1[k]='+' then
      data2:=data+data1
    else if mun1[k]='-' then
      data2:=data-data1
    else if mun1[k]='*' then
      data2:=data*data1
    else if mun1[k]='/' then
      data2:=data/data1;
    k:=k+1;
    data:= data2;
    end;
   Edit1.Text:=Edit1.Text+'='+floattostr(data2);
end;

procedure TForm1.FormKeyPress(Sender: TObject; var Key: Char);
begin
if KeyPreview then
begin
  if key = #43 then //+
    button15.Click;
  if key = #45 then //-
    button17.Click;
  if key = #42 then //*
    button19.Click;
  if key = #47 then // /
    button21.Click;

  if key = #13 then // 回车
    button31.Click;
  if key = #8 then // 删除
    button26.Click;

  if key = '1' then
    button7.Click;
  if key = '2' then
    button29.Click;
  if key = '3' then
    button16.Click;
  if key = '4' then
    button6.Click;
  if key = '5' then
    button28.Click;
  if key = '6' then
    button18.Click;
  if key = '7' then
    button5.Click;
  if key = '8' then
    button35.Click;
  if key = '9' then
    button20.Click;


  end;
end;

procedure TForm1.Button26Click(Sender: TObject);
begin
button31.SetFocus;
 Edit1.Text := Copy(Edit1.Text,0,Length(Edit1.Text)-1);

  Edit1.SelStart := Length(Edit1.Text);
end;

end.
