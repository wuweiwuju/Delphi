procedure TForm1.Button30Click(Sender: TObject);
begin
button31.SetFocus;
    if  Edit1.Text ='' then
        MessageBeep(MB_OK)
    else
      begin
        if Length(Edit1.Text)> 40 then
            MessageBeep(MB_OK)
        else
        begin
        if OK =1 then
           Edit1.Text:=''
        else
          Edit1.Text:=Edit1.Text +'0';
        end;
      end;
OK:=0;
end;

procedure TForm1.Button32Click(Sender: TObject);
begin
button31.SetFocus;
  if  Edit1.Text ='' then
      Edit1.Text:= '0.'
  else
  begin
    if Length(Edit1.Text)> 40 then
      MessageBeep(MB_OK)
    else
    begin
    if OK =1 then
      begin
       Edit1.Text:='';
       Edit1.Text:= '0.';
      end
    else
       Edit1.Text:=Edit1.Text +'.';
    end;
  end;
OK:=0;
end;

