procedure TForm1.Button15Click(Sender: TObject);
var
  i:Integer;
begin
button31.SetFocus;
  i:=Length(Edit1.Text);
  if Edit1.Text='' then
     MessageBeep(MB_OK)
  else
  begin
      if (Edit1.Text[i]='+')or (Edit1.Text[i]='-')or
         (Edit1.Text[i]='*')or (Edit1.Text[i]='*') then
         MessageBeep(MB_OK)
      else
         Edit1.Text:=Edit1.Text+'+';
  end;
end;

